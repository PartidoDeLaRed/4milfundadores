.input-wrapper {
  position: relative;
  font-size: 1.2em;
  margin-bottom: 1em;
  &:before {
    z-index: -1;
    content: '';
    absolute: left 0 top 1em;
    size: 100% 1px;
    background-color: marronClaro;
  }
  &.required {
    &:after {
      content: '*';
      absolute: right 0 top 0;
      color: lightgray;
      font-size: 2.2em;
      line-height: 0.9em;
    }
    input {
      padding-right: 1em;
    }
  }
  input {
    reset-box-model();
    width: 100%;
    border: none;
    font-family: inherit;
    font-size: inherit;
    background-color: transparent;
    &:disabled {
      color: marron;
    }
    &:-webkit-autofill {
      background-color: transparent;
    }
    &:focus {
      outline: 0;
    }
  }
}

.select-wrapper {
  margin-bottom: 1em;
  overflow: hidden;
  background: #F8F8F8;
  border: 1px solid #DDDDDD;
  height: 2em;
  border-radius: 0;
  background-position: 98% 55%;
  background-repeat: no-repeat;
  background-size: 0.9em;
  background-image: url('data:image/svg+xml;base64,');

  select {
    reset-box-model();
    display: block;
    padding: 0 0.5em;
    width: 100%;
    height: 2em;
    line-height: 1.8em;
    font-size: 1em;
    text-indent: 0.01px;
    text-overflow: '';
    appearance: none;
    background: transparent;
    &:focus {
      outline: 0;
    }
  }
}
